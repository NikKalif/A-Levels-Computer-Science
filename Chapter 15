class Point:
    def __init__(self):
        self.x = 0
        self.y = 0

p = Point()
q = Point()

p.x = 3
p.y = 10

def reflect_x(point):
    point.y -= 2*point.y

    print(point.x)
    print(point.y)

reflect_x(p)

3.

class Point: #Blue Print / architectural plan / template
    def __init__(self):
        self.x = 0
        self.y = 0

    def slope_from_origin(self):
        if self.y < 0:
            self.y -= 2*self.y
        if self.x < 0:
            self.x -= 2*self.x
        gradient = self.y / self.x
        print(gradient)



p = Point()
q = Point()

p.x = -3 #Actual individual house
p.y = -100

p.slope_from_origin()

