import math

class Point:
    def __init__(self):
        self.x = 0
        self.y = 0

p = Point()
q = Point()

def distance(point1, point2):
    result = math.sqrt((point2.x-point1.x)**2 + (point2.y-point1.y)**2)
    print(result)

distance(p,q)

