monster = open("monsters.txt")

def monstercreator(name, origin, description):
    monstercard = []
    monstercard.append(name)
    monstercard.append(origin)
    monstercard.append(description)
    monstercard.append(input("Attack Level?"))
    monstercard.append(input("Magical Force Level?"))
    monstercard.append(input("Magical Defence Level"))
    monstercard.append(input("Defence Level"))
    monstercard.append(input("Intelligence Level"))
    monstercard.append(input("Health Level"))
    monstercard.append(input("Experience Level"))
    print(monstercard)


monstercreator(input("Name?"), input("Origin?"), input("Description"))
