Caeser --

def caeserencode(word,shift):
    newlist = []
    finalword = []
    for letter in word:
        print(ord(letter))
        newnum = ord(letter)
        shiftednum = newnum + shift
        while shiftednum > 122:
            shiftednum -= 26
        newlist.append(shiftednum)
    for letter in newlist:
        newchar = chr(letter)
        finalword.append(newchar)
    print(''.join(finalword))

gaybama = input("What word would you like to encrypt: ")
cycles = int(input("How many cycles: "))
caeserencode(gaybama,cycles)



